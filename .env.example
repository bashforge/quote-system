# Database Configuration
MONGODB_URI=mongodb://localhost:27017/event-center

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key # Generate using: openssl rand -base64 32

# Admin Setup Configuration
SETUP_TOKEN=your-secure-setup-token # Generate using: openssl rand -hex 32
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# Email Service Configuration (Optional - for notifications)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# Application Configuration
NODE_ENV=development
APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Rate Limiting (Optional - for API protection)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes

# File Upload (Optional - if you plan to handle file uploads)
UPLOAD_MAX_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Logging Configuration (Optional)
LOG_LEVEL=debug # Options: error, warn, info, debug